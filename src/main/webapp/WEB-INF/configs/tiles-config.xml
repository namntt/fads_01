			<add-attribute value="/assets/css/viewNews.css" />
		</put-list-attribute>
		<put-list-attribute name="jsAdd">
			<add-attribute value="/assets/js/follow.js" />
			<add-attribute value="/assets/js/comment.js" />
			<add-attribute value="/assets/js/jquery-ui.js" />
			<add-attribute value="/assets/js/autocomplete.js" />
			<add-attribute value="/assets/js/shareFacebook.js" />
		</put-list-attribute>
